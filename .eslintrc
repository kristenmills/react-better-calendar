{
  "extends": [
    "airbnb",
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "demo/webpack.config.shared.js"
      }
    }
  },
  "rules": {
     "max-len": [1, 180, 4],
     "react/jsx-no-bind": [0],
     "react/no-array-index-key": [0],
     "import/no-extraneous-dependencies": [0],
  }
}
